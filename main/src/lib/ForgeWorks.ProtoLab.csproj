<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>ForgeWorks.ProtoLab</RootNamespace>
    <RuntimeIdentifiers>win10-x64;linux-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup>
    <Using Include="OpenTK.Mathematics" />
    <Using Include="OpenTK.Graphics.OpenGL4" />
    <Using Include="OpenTK.Windowing.Common" />
    <Using Include="OpenTK.Windowing.Desktop" />
    <using Include="ForgeWorks.RailThorn.Windows" />
    <Using Include="OpenTK.Windowing.GraphicsLibraryFramework" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="ForgeWorks.ProtoLab.Configurators">
      <HintPath>..\..\dlls\ForgeWorks.ProtoLab.Configurator.dll</HintPath>
    </Reference>
    <Reference Include="ForgeWorks.RailThorn.Windows">
      <HintPath>..\..\dlls\ForgeWorks.RailThorn.Windows.dll</HintPath>
    </Reference>
    <PackageReference Include="OpenTK" Version="4.8.2" />
  </ItemGroup>
</Project>