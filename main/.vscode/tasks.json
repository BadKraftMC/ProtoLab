{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "${workspaceFolder}/ForgeWorks.CrossWind.sln",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "clean",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "push",
            "command": "cp ./src/lib/CrossWind/bin/Debug/net7.0/ForgeWorks.CrossWind.dll ./dlls/ForgeWorks.CrossWind.dll",
            "type": "shell",
            "group": "build",
            "problemMatcher": [],
            "dependsOn":["clean", "build"]
        },
        {
            "label": "build lib",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "${workspaceFolder}/src/lib/CrossWind/ForgeWorks.CrossWind.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ForgeWorks.sln",
                "/property:GenerateFullPaths=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/ForgeWorks.sln"
            ],
            "problemMatcher": "$msCompile"
        },
    ]
}
